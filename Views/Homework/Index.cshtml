@model IEnumerable<HomeworkItem>?


@if (Model == null)
{
    <h1>Incorrect id!</h1>
}

else
{
    foreach (var item in @Model)
    {
        <div class="hwItem">
            <div class="forRemove">
                <input type="button" id="downloadButton" name="downloadButton" value="↓" />
                <input type="button" id="removeButton" name="removeButton" value="X" data-id="@item.Id"/>
            </div>
            <div class="forContent">Title: @item.Title <br/> Content: <br/> @item.Content</div>
            <div class="forDate">Sent: @item.Sent</div>
        </div>
    }
}