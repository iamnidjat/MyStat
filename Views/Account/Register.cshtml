@model MyStat.ViewModels.RegisterModel

<link href="~/css/register.css" type="text/css" rel="stylesheet" />

<h2>Регистрация</h2>

@using(Html.BeginForm())
{
    <div>
        <div>
            <label asp-for="UserName">Введите имя пользователя</label><br />
            @Html.TextBoxFor(t => t.UserName)
            <span asp-validation-for="UserName" />
        </div>
        <div>
            <label asp-for="Password">Введите пароль</label><br />
            @Html.TextBoxFor(t => t.Password)
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="ConfirmPassword">Повторите пароль</label><br />
            @Html.TextBoxFor(t => t.ConfirmPassword)
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <input type="submit" value="Регистрация" class="submitButton" />
        </div>
    </div>
}
